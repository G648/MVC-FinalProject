<h1>Página de Cadastro de Professores</h1>

<form action='@Url.Action("Cadastrar")' method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="nome">Nome:</label>
        <input type="text" name="professorNome" placeholder="Ex. Laura Lima" id="nome" />
    </div>
    <div class="form-group">
        <label for="email">Email:</label>
        <input type="text" name="professorEmail" placeholder="Ex. laura.26@gmail.com" id="email" />
    </div>
    <div class="form-group">
        <label for="end">Endereço:</label>
        <input type="text" name="professorEnd" placeholder="Ex. Rua Barão de Limeira 94" id="end" />
    </div>
    <div class="form-group">
        <label for="tel">Telefone:</label>
        <input type="text" name="professorTel" placeholder="Ex. 11-99989-2554" id="tel" />
    </div>
    <div class="form-group">
        <label for="cargo">Cargo:</label>
        <input type="text" name="professorCargo" placeholder="Ex.Prof Matemática" id="cargo" />
    </div>
    <button type="submit">Cadastrar</button>

</form>